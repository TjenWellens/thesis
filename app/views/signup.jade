extend layout
block content
    form.form-signup(action="/signup", method="POST")
        h2.form-signin-heading Please register
        .form-group
            label(for='name') Name
            input#name.form-control(name="name", type='text', placeholder='Name', required='', autofocus='')

        .form-group
            label(for='inputEmail') Email address
            input#inputEmail.form-control(name="email", type='email', placeholder='Email address', required='', autofocus='')

        .form-group
            label(for='inputPassword') Password
            input#inputPassword.form-control(name="password", type='password', placeholder='Password', required='', autofocus='')

        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
    p
        a(href="/login") Already have an account?
        br
        a(href="/login/twitter") Login with twitter
        br
        a(href="/login/google") Login with google
